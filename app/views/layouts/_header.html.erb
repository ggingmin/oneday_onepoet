<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to "하루한편", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "사용법", help_path, id: "usage-btn" %></li>
        <% if logged_in? %>
          <li><%= link_to "다른 이용자", users_path, id: "users-btn" %></li>
          <li class="dropdown">
            <a href="#" id="acnt-btn" class="dropdown-toggle" data-toggle="dropdown">
              내 계정 <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "프로필", current_user %></li>
              <li><%= link_to "설정", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "로그아웃", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "로그인", login_path, id: "login-btn", class: "btn-default" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>