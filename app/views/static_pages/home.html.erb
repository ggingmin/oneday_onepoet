<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>      
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>여러분들이 남긴 한 줄의 시</h3>
      <%= render 'shared/feed' %>
    </div>    
  </div>
<% else %>
  <div class="center jumbotron">
    
    <h1 class="home-title">하루 한 편, 시의 위로</h1>
    
    <p class="home-text">사랑하라, 한 번도 상처받지 않은 것처럼</p>

    <p class="home-text">류시화 엮음</p>

    <%= link_to "오늘, 누군가의 위안이 되어 주세요", signup_path, class: "btn btn-lg btn-primary" %>
    
  </div>
<% end %>